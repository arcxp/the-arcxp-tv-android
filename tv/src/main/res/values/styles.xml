<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreenText">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">@font/old_english_five</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/default_image_card_width</item>
        <item name="android:layout_height">@dimen/default_image_card_height</item>
    </style>
    <style name="EmptyCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="DefaultCardImageStyleHero" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/default_image_card_width_hero</item>
        <item name="android:layout_height">@dimen/default_image_card_height_hero</item>
    </style>
    <style name="DefaultCardStyle" parent="CustomImageCardViewStyle">
        <item name="cardBackground">@android:color/transparent</item>
    </style>

    <style name="HeroCardStyle" parent="Widget.Leanback.ImageCardView">
        <item name="cardBackground">@null</item>
    </style>
    <style name="HeroImageView">
        <item name="android:layout_width">@dimen/custom_image_width</item>
        <item name="android:layout_height">@dimen/custom_image_height</item>
        <item name="android:foreground">@drawable/default_background</item>
    </style>

    <style name="detailButton">
        <item name="android:background">@drawable/bgd</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">25sp</item>
        <item name="theme">@style/Widget.Leanback.DetailsActionButtonStyle</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeroTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">@dimen/custom_text_width</item>
        <item name="android:layout_height">@dimen/custom_text_height</item>
        <item name="android:layout_marginBottom">@dimen/custom_margin</item>
        <item name="android:layout_marginStart">@dimen/custom_margin</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LiveBannerTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="LiveTitleTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_gravity">start</item>
        <item name="maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabs_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TabStyle</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <style name="SettingsSubsections">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_sdk_margin</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsSections">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomInfoAreaStyle" parent = "Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:background">#FF000000</item>
    </style>

    <style name="CustomImageCardViewStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardType">infoUnder</item>
        <item name="infoVisibility">activated</item>
        <!-- In order to keep backward compatibility we have to create an icon on right. -->
        <item name="lbImageCardViewType">Title|IconOnRight</item>
        <!-- Deprecated. Use 'Widget.Leanback.ImageCardView.InfoAreaStyle' instead. -->
        <item name="infoAreaBackground">@null</item>
    </style>

    <style name="SearchOrbViewStyle" parent="Widget.Leanback.SearchOrbViewStyle">
        <item name="searchOrbIcon">?attr/defaultSearchIcon</item>
        <item name="searchOrbColor">?attr/defaultSearchColor</item>
        <item name="searchOrbIconColor">?attr/defaultSearchIconColor</item>
        <item name="searchOrbBrightColor">?attr/defaultSearchBrightColor</item>
    </style>
</resources>